<Page
    x:Class="SpaceInvaders.View.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Canvas Grid.Row="0" x:Name="theCanvas" Width="1080" Height="720" Background ="Black" />
        <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="100" HorizontalAlignment="Center">
            <TextBlock x:Name="scoreSummary" Text="Score:" Foreground="Yellow" TextAlignment="Center" FontSize="20"/>
            <TextBlock x:Name="gameSummary" Text="" Foreground="Yellow" TextAlignment="Center" FontSize="20"/>
            <TextBlock x:Name="healthSummary" Text="Health:" Foreground="Yellow" TextAlignment="Center" FontSize="20"/>
        </StackPanel>
        
    </Grid>
    
</Page>
