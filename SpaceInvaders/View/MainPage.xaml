<Page
    x:Class="SpaceInvaders.View.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Canvas Grid.Row="0" x:Name="theCanvas" Width="640" Height="480" Background ="Black">
        </Canvas>
        <TextBlock Grid.Row="1" x:Name="scoreSummary" Text="Score:" Foreground="Yellow" TextAlignment="Center" FontSize="25"/>
    </Grid>
    
</Page>
